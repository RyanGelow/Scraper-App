<div>
    <h1 class="card-panel hoverable z-depth-3 center-align">The Latest Bay Area <br> Sports News</h1>
</div>

<div class="row">
    <div class="col s8 offset-s2">
        <div class="card">
            <div class="card-content">
                <h3 class="card-title grey-text text-darken-4" id="notes-title" data-id="{{page.id}}">{{page.title}}</h3>
            </div>
        </div>
    </div>
</div>

<div class="row existing-note hide">
    <div class="col s8 offset-s2">
        <div class="card">
            <div class="card-content">
                <span class="card-title grey-text text-darken-4">Last Comment</span>
                <div class="noted">
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col s8 offset-s2">
        <div class="card small">
            <div class="card-content">
                <span class="card-title grey-text text-darken-4">Leave a Comment<a class="waves-effect waves-light btn post-notes right" data-id="{{page.id}}" href="">POST</a>
                    <form class="col s12">
                        <div class="input-field col s8">
                            <input id="title-{{page.id}}" type="text" class="validate note-title">
                            <label for="comment_title">Comment Title</label>
                        </div>
                        <div class="input-field col s12">
                            <input id="body-{{page.id}}" type="text" class="validate note-body">
                            <label for="comment_body">Leave a comment here...</label>
                        </div>
                    </form> 
                </span>
            </div>
        </div>
    </div>
</div>
